{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "outDir": "./build/esm",
        "rootDir": "./src",
        "paths": {
            "$/utils": [
                "web/utils.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./src/cjsIndex.ts",
        "**/__tests__/**/*",
        "tests/**/*",
        "*.spec.ts"
    ]
}